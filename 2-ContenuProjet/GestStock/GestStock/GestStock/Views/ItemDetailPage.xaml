<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestStock.Views.ItemDetailPage"
             Title="{Binding Title}">


    <StackLayout Spacing="20" Padding="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        
            <Label Grid.Row="0" Text="{Binding Text}" FontSize="Medium"/>
            <Label Grid.Row="1" Text="{Binding Description}" FontSize="Small"/>
            <Button Grid.Row="2" Margin="0,10,0,0" Text="{Binding State}"
                            Command="{Binding BorrowCommand}"
                            BackgroundColor="{Binding ButtonBackgroundColor}"
                            TextColor="White" >
                            
            </Button>
        </Grid>
    </StackLayout>
</ContentPage>